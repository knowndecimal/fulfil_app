<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product['id'] %></td>
        <td><%= link_to(product['rec_name'], product_path(product['id'])) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
